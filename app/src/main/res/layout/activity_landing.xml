<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity"
    android:background="#1C242C"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/land_logo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/logo"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/land_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/primary_round_corner"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="LOGIN"
        android:textColor="#fff"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/land_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have a Vitcoin account?"
        android:textColor="#737373"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/land_signup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/primary_dark_round_corner"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="SIGN UP"
        android:textColor="#fff"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By using Vitcoin, you agree to Vitcoin"
        android:textColor="#737373"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp">

        <TextView
            android:id="@+id/term_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#34699A"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" and "
            android:textColor="#737373"/>
        <TextView
            android:id="@+id/privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#34699A"/>
    </LinearLayout>
</LinearLayout>